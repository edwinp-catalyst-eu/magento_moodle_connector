<?xml version="1.0"?>
<config>
    <tabs>
        <moodleconnector translate="label" module="moodleconnector">
            <label>Moodle Connector</label>
            <sort_order>100</sort_order>
        </moodleconnector>
    </tabs>
    <sections>
        <moodleconnector translate="label" module="moodleconnector">
            <label>Settings</label>
            <tab>moodleconnector</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <moodle1settings translate="label" module="moodleconnector">
                    <label>Moodle Instance 1 Details</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Connector Enabled:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <baseurl translate="label">
                            <label>Moodle Base URL:</label>
                            <comment>eg. http://mymoodle.com</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </baseurl>
                        <token translate="label">
                            <label>Moodle Token:</label>
                            <comment>Magento connector web service token from Moodle Instance 1</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </token>
                    </fields>
                </moodle1settings>
                <moodle2settings translate="label" module="moodleconnector">
                    <label>Moodle Instance 2 Details</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Connector Enabled:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <baseurl translate="label">
                            <label>Moodle Base URL:</label>
                            <comment>eg. http://mymoodle.com</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </baseurl>
                        <token translate="label">
                            <label>Moodle Token:</label>
                            <comment>Magento connector web service token from Moodle Instance 2</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </token>
                    </fields>
                </moodle2settings>
            </groups>
        </moodleconnector>
    </sections>
</config>
